{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}
    <div class="container form my-5">
        <h1 class="mb-4">Connexion</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" >
            {#            <label for="username">Email:</label>#}
            <input class=" mt-1 my_input col-lg-6 form-control" type="text" id="username" name="_username" value="{{ last_username }}" required placeholder="Email">

            {#            <label class="mt-3" for="password">Mot de pass:</label>#}
            <input class="form-control mt-1 my_input col-lg-6" type="password" id="password" name="_password" required placeholder="Mot de passe">

{#            <input type="hidden" name="_target_path" value="/account">#}

            <button type="submit" class="my_button btn mt-2">Me connecter</button>
        </form>
        <br>
        <p>Vous n'avez pas de compte? <a href="{{ path('app_register') }}">Inscrivez-vous</a></p>

    </div>
{% endblock %}

