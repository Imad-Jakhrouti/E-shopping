{% extends 'base.html.twig' %}

{% block title %} {{ product.name}} {% endblock %}

{% block body %}

    <div class="container py-5">
        <div class="row fiche_product d-flex justify-content-center pt-3">
            <div class="col-12  col-md-10 col-lg-6">
                <div class="product_image">
                    <img class="" src="/uploads/{{ product.image }}">
                </div>
                <div class="product_info">

                </div>
            </div>
            <div class="col-12  col-md-10 col-lg-6">
                <small><i><a href="{{ path('app_category', {slug : product.category.slug}) }}"> {{ product.category.name }}</a> > {{ product.name }}</i></small>
                <h1 class="">{{ product.name }}</h1>
                <span class="d-block">{{ product.PriceWt|formatPrice }}</span>
                <div class="">{{ product.description|raw }}</div>
                <a href="" class="btn btn-warning w-100">Ajouter au panier</a>
            </div>
        </div>
    </div>
{% endblock %}
