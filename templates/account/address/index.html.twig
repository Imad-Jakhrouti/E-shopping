{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row">
            <h1>Espace prive </h1>
            <div class="col-md-3 col-11">
                {% include 'account/menu.html.twig' %}
            </div>
            <div class="col-md-9 col-11 ps-4">
                <div class="row">
                    <h5>Mes adresses</h5>
                    {% if app.user.addresses|length == 0 %}
                        <p>Vous n'avez pas encore enregister des adresses</p>
                    {% else %}
                        {% for address in app.user.addresses %}
                            <div class="col-md-4 bg-light p-3">
                                <strong>{{ address.firstname }} {{ address.lastname }}</strong> <br>
                                <span>{{ address.address }}</span> <br>
                                <span>{{ address.city }}, {{ address.postal }}  </span> <br>
                                <span>{{ address.country }}</span> <br>
                                <span>{{ address.phone }}</span> <br>
                                <a href="{{ path('app_account_address_form',{ action : 'modifier' , id : address.id}) }}" class="btn btn-secondary">Modifier</a>
                                <a href="{{ path('app_account_address_delete',{ id : address.id}) }}" class="btn btn-secondary">Supprimer</a>

                            </div>
                        {% endfor %}
                    {%endif %}
                </div>
                        <a href="{{ path('app_account_address_form',{action : 'ajouter'}) }}">Ajouter un adresse</a>

            </div>
        </div>
    </div>
{% endblock %}
