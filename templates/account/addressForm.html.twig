{% extends 'base.html.twig' %}

{% block title %}Mes adresses{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <h1>Espace prive </h1>
            <div class="col-md-3 col-11 bg-light">
                {% include 'account/_menu.html.twig' %}
            </div>
            <div class="col-md-9 col-11 ps-4">
                <div class="row">
                    <div class="col-md-12 ">
                        <h5>Mes adresses</h5>
                        {{ form_start(addressForm) }}
                        <div class="row">
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.firstname) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.lastname) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.address) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.postal) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.city) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.country) }}</div>
                            <div class="col-lg-6 col-12">{{ form_row(addressForm.phone) }}</div>
{#                            <div class="col-lg-6 col-12">{{ form_row(addressForm.Submit) }}</div>#}
                        </div>
                        {{ form_end(addressForm) }}

                    </div>
                </div>
            </div>
        </div>


    </div>
{% endblock %}
