{% extends 'base.html.twig' %}

{% block title %}Mon panier{% endblock %}
{% block icon %}
    <link rel="icon" type="image/png" size="32" href="https://img.icons8.com/3d-fluency/1500w/shopping-bag.png" data-hid="63b4eb3">
{% endblock %}

{% block body %}

    <div class="container py-5">
        <h1>Mon panier</h1>
        <div class="row">
            <div class="col-md-8">
                Listes de produit
                <hr>
                {% for myCart in cart %}
                    <div class="row cart_product mb-2">
                        <div class="col-md-2 cart_product_image">
                            <img class="img-fluid" src="/uploads/{{ myCart['product'].image }}" alt="{{ myCart['product'].name }}">
                        </div>
                        <div class="col-md-4">
                            <strong>{{ myCart['product'].name }}</strong>
                            <small class="d-block">Prix unitaires: {{ myCart['product'].priceWt|formatPrice }}</small>
                        </div>
                        <div class="col-md-3 text-right">
                            <a href="{{ path('app_cart_decrease' , {id : myCart['product'].id }) }}">-</a> <span class=" badge text-bg-secondary">x{{ myCart['quantity'] }}</span> <a href="{{ path('app_cart_increase' , {id : myCart['product'].id }) }}">+</a>
                        </div>
                        <div class="col-md-3 text-right">
                            <strong class="">{{ (myCart['product'].priceWt * myCart['quantity'])|formatPrice }}</strong>
                            <a href="{{ path('app_cart_remove', {id :  myCart['product'].id }) }}"  class="btn btn-danger ">Supprimer</a>

                        </div>
                    </div>
                {% endfor %}
                {% if cart %}
                    <a href="{{ path('app_cart_removeAll') }}">Vider votre panier</a>
                {% endif %}
            </div>
            <div class="col-md-4 p-3">
                <div class="bg-light d-flex justify-content-between">
                    <span>Total produit</span>
                    <span>{{ fullCartQuantity }}</span>
                </div>
                <div class="d-flex justify-content-between mt-3">
                    <span>Total Prix</span>
                    <span>{{ totalPriceWt|formatPrice }}</span>
                </div>
                <div>
                    <a href="{{ path('app_order') }}" class="btn btn-success w-100 mt-3">Commander</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
